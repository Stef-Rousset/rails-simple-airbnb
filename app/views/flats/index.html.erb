

<div class="card-container">
  <h1>All our flats (<%= Flat.count %>)</h1>
  <div class="cards">
    <% @flats.each do |flat| %>
      <div class="card" style="width: 18rem;">
        <img src="https://images.unsplash.com/photo-1529408632839-a54952c491e5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2700&q=80" class="card-img-top" alt="flat">
         <div class="card-body">
             <h5 class="card-title"><%= flat.description.capitalize %></h5>
             <p class="card-text"><%= flat.address %></p>
             <div class="card-infos">
               <p><i class="fas fa-user-friends"></i><%= flat.number_of_guests %></p>
               <p><i class="fas fa-euro-sign"></i><%= flat.price_per_night %></p>
             </div>
          </div>
          <div class="card-links">
          <%= link_to "More info", flat_path(flat) %>
          <%= link_to "Edit", edit_flat_path(flat), class: "yellow"%>
          <%= link_to "Remove",
            flats_path,
            method: :delete,
            data: {confirm: "Are you sure ?"},
            class: "red" %>
          </div>
        </div>
    <% end %>
  </div>
 </div>

